[application]
app_server ansible_host="{{ server_application_host }}"

[database]
db_server ansible_host="{{ server_database_host }}"

[runner]
run_server ansible_host="{{ server_runner_host }}"

[all:vars]
ansible_python_interpreter=/usr/bin/python3

database_host="{{ server_database_host }}"
database_username=postgres
database_password=password
database_name=postgres

virtual_users=20
duration=600
run_id=overrideme

[application:vars]
instance_type=application

[database:vars]
instance_type=database

[runner:vars]
instance_type=runner
